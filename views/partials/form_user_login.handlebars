<div class="row mt-5">
    <div class="card col-sm-5 m-auto">
        <div class="mt-3">
            <h3 class="text-bold text-center  font-weight-bold ">登入表單</h3>
        </div>
        {{> message}}
        <form action="/users/login" method="POST" class="card-body">



            <div class="form-group">
                <label for="email">Email: </label>
                <input type="email" id="email" name="email" class="form-control" />
            </div>

            <div class="form-group">
                <label for="password">Password: </label>
                <input type="password" id="password" name="password" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success btn-block mt-2">
                登入
            </button>
            <a href="/auth/facebook" class="btn btn-primary btn-block mt-2">
                Facebook登入
            </a>
            <div class=" mt-3">
                <p>還沒有帳號了? <a href="/users/register">註冊</a></p>
            </div>
        </form>
    </div>
</div>